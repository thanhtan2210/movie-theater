{
  "name": "movie-theater-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm:dev:gateway\" \"npm:dev:movies\" \"npm:dev:users\" \"npm:dev:bookings\" \"npm:dev:frontend\"",
    "dev:gateway": "npm run dev --prefix backend/gateway",
    "dev:movies": "npm run dev --prefix backend/services/movies",
    "dev:users": "npm run dev --prefix backend/services/users",
    "dev:bookings": "npm run dev --prefix backend/services/bookings",
    "dev:frontend": "npm run dev --prefix frontend",
    "install:all": "npm install && npm install --prefix backend && npm install --prefix frontend"
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}
