{
  "name": "movie-theater-backend",
  "version": "1.0.0",
  "description": "Backend microservices for Movie Theater application",
  "main": "gateway/server.js",
  "scripts": {
    "start:gateway": "node gateway/server.js",
    "start:movies": "node services/movies/server.js",
