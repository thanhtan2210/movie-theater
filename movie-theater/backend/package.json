    "lint": "eslint ."
  },
  "keywords": [
    "microservices",
    "movie",
    "theater",
    "booking"
  ],
  "author": "thanhtan2210",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.0.3",
    "cors": "^2.8.5",
