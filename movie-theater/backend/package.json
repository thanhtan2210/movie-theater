    "start:bookings": "node services/bookings/server.js",
    "start:sms": "node sms/smsService.js",
    "start:all": "concurrently \"npm run start:gateway\" \"npm run start:movies\" \"npm run start:users\" \"npm run start:bookings\"",
    "dev:gateway": "nodemon gateway/server.js",
    "dev:movies": "nodemon services/movies/server.js",
    "dev:users": "nodemon services/users/server.js",
    "dev:bookings": "nodemon services/bookings/server.js",
    "dev:users": "nodemon services/users/server.js",
    "dev:bookings": "nodemon services/bookings/server.js",
